<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fill_blue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_will_title"
        tools:src="@drawable/ic_location" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_will_title"
        style="@style/LearnItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/learn_more_top_item_margin"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toStartOf="@id/iv_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bluetooth permission will:" />

    <ImageView
        android:id="@+id/iv_will_item1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_blue_circle_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_will_item1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_will_item1"
        style="@style/LearnMultiItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="@dimen/learn_more_item_margin"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_will_item1"
        app:layout_constraintTop_toBottomOf="@id/tv_will_title"
        tools:text="Detect other devices around you" />

    <ImageView
        android:id="@+id/iv_will_item2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_blue_circle_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_will_item2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_will_item2"
        style="@style/LearnMultiItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/learn_more_item_margin"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_will_item2"
        app:layout_constraintTop_toBottomOf="@id/tv_will_item1"
        tools:text="Detect other devices around you" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_will_item1,tv_will_item2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_will_not_title"
        style="@style/LearnItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/learn_more_top_item_margin"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        tools:text="Bluetooth permission will:" />

    <ImageView
        android:id="@+id/iv_will_not_item1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_red_circle_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_will_not_item1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_will_not_item1"
        style="@style/LearnMultiItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="@dimen/learn_more_item_margin"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_will_not_item1"
        app:layout_constraintTop_toBottomOf="@id/tv_will_not_title"
        tools:text="Detect other devices around you" />

    <ImageView
        android:id="@+id/iv_will_not_item2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_red_circle_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_will_not_item2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_will_not_item2"
        style="@style/LearnMultiItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="@dimen/learn_more_item_margin"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_will_not_item2"
        app:layout_constraintTop_toBottomOf="@id/tv_will_not_item1"
        tools:text="Detect other devices around you" />
</androidx.constraintlayout.widget.ConstraintLayout>